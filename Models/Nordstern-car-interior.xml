<PropertyList>

 <path>Nordstern-car-interior.ac</path>
 <offsets>
  <!-- x/y/z == back/right/up -->
  <x-m>   0.0 </x-m>
  <y-m>   0.0 </y-m>
  <z-m>   0.0 </z-m>
 </offsets>

 <model>
  <name>Rudder wheel</name>
  <path>Aircraft/Nordstern/Models/control_wheel.ac</path>
  <offsets>
   <!-- x/y/z == back/right/up -->
   <x-m>  0.15 </x-m>
   <y-m>  0.00 </y-m>
   <z-m>  1.02 </z-m>
  </offsets>
 </model>

 <model>
  <name>Magnetic compass</name>
  <path>Aircraft/Nordstern/Instruments/MagneticCompass/compass.xml</path>
  <offsets>
   <!-- x/y/z == back/right/up -->
   <x-m> -0.04 </x-m>
   <y-m>  0.00 </y-m>
   <z-m>  1.13 </z-m>
  </offsets>
 </model>

 <model>
  <name>Elevator wheel</name>
  <path>Aircraft/Nordstern/Models/control_wheel.ac</path>
  <offsets>
   <!-- x/y/z == back/right/up -->
   <x-m>  2.22 </x-m>
   <y-m> -0.93 </y-m>
   <z-m>  1.02 </z-m>
   <heading-deg>78.7</heading-deg>
  </offsets>
 </model>

 <model>
  <name>5deg inclinometer</name>
  <path>Aircraft/Nordstern/Instruments/Inclinometers/inclinometer_5deg.xml</path>
  <offsets>
   <!-- x/y/z == back/right/up -->
   <x-m>  2.232 </x-m>
   <y-m> -1.035 </y-m>
   <z-m>  1.800 </z-m>
   <heading-deg>80.0</heading-deg>
  </offsets>
 </model>

 <model>
  <name>20deg inclinometer</name>
  <path>Aircraft/Nordstern/Instruments/Inclinometers/inclinometer_20deg.xml</path>
  <offsets>
   <!-- x/y/z == back/right/up -->
   <x-m>  2.232 </x-m>
   <y-m> -1.035 </y-m>
   <z-m>  1.765 </z-m>
   <heading-deg>80.0</heading-deg>
  </offsets>
 </model>

 <model>
  <name>Altimeter</name>
  <path>Aircraft/Superwal/Models/Instruments/Hoehenmesser/Hoehenmesser.xml</path>
  <offsets>
   <!-- x/y/z == back/right/up -->
   <x-m>  2.232 </x-m>
   <y-m> -1.040 </y-m>
   <z-m>  1.700 </z-m>
   <heading-deg>80.0</heading-deg>
  </offsets>
 </model>

 <model>
  <name>Hase variometer</name>
  <path>Aircraft/Nordstern/Instruments/Variometer/variometer.xml</path>
  <offsets>
   <!-- x/y/z == back/right/up -->
   <x-m>  1.950 </x-m>
   <y-m> -0.950 </y-m>
   <z-m>  1.440 </z-m>
   <heading-deg>80.0</heading-deg>
  </offsets>
 </model>

 <animation>
  <type>pick</type>
  <object-name>ladder</object-name>
  <action>
   <button>0</button>
   <repeatable>false</repeatable>
   <binding>
    <command>nasal</command>
    <script>Nordstern.climbLadder();</script>
   </binding>
  </action>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>Rudder wheel</object-name>
  <property>surface-positions/rudder-pos-norm</property>
  <factor>-250.0</factor>
  <center>
   <x-m>  0.15 </x-m>
   <y-m>  0.00 </y-m>
   <z-m>  1.02 </z-m>
  </center>
  <axis>
   <x>1.0</x>
   <y>0.0</y>
   <z>0.0</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>Elevator wheel</object-name>
  <property>surface-positions/elevator-pos-norm</property>
  <factor>-250.0</factor>
  <axis>
   <x1-m>  2.22 </x1-m>
   <y1-m> -0.95 </y1-m>
   <z1-m>  1.02 </z1-m>
   <x2-m>  2.24 </x2-m>
   <y2-m> -0.85 </y2-m>
   <z2-m>  1.02 </z2-m>
  </axis>
 </animation>

</PropertyList>
