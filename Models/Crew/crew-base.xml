<PropertyList>

 <!-- Start cursors. - ->
 <path>Cursors/cursors.xml</path>
 <offsets>
  <!- - x/y/z == back/right/up. - ->
  <x-m> 0.00 </x-m>
  <y-m> 0.00 </y-m>
  <z-m> 0.00 </z-m>
 </offsets>
 <!- - End cursors. -->
 <!-- Start Generic/Pilot/ -->
 <path>Aircraft/Generic/Pilot/WWI/pilot.ac</path>
 <offsets>
  <!-- x/y/z == back/right/up. -->
  <x-m>-0.18 </x-m>
  <y-m> 0.02 </y-m>
  <z-m> 0.70 </z-m> <!-- Needs to be applied to the animations below? Or? -->
 </offsets>
 <animation>
  <type>scale</type>
  <x-offset type="float">1.05</x-offset>
  <y-offset type="float">1.05</y-offset>
  <z-offset type="float">1.05</z-offset>
 </animation>
 <!-- End Generic/Pilot/ -->

