  <offset-deg alias="../../params/arms/upper-animation/offset-deg" />
  <min alias="../../params/arms/upper-animation/min" />
  <max alias="../../params/arms/upper-animation/max" />
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
  <center>
   <x-m>0.341</x-m>
   <y-m>0</y-m>
