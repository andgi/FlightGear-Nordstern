     <offset-deg type="float" />
     <min type="float" />
     <max type="float" />
    </lower-animation>
   </right>
  </legs>
 </params>

 <animation>
  <type>select</type>
  <condition>
   <property alias="../../../params/visible" />
  </condition>
 </animation>

 <animation>
  <type>select</type>
  <object-name>Head</object-name>
  <object-name>Head_0</object-name>
  <object-name>Head_1</object-name>
  <condition> <!-- Doesn't work. Why? -->
   <not>
    <equals>
     <property>/sim/current-view/name</property>
     <property alias="../../../../../params/view-name" />
    </equals>
   </not>
  </condition>
 </animation>

